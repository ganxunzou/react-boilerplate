{
  //指定解析器parser
  "parser": "babel-eslint",
  //环境
  "env": {
    "browser": true,
    "node":true,
    "commonjs":true,
    "es6":true
  },
  //全局变量
  "globals": {

  },
  //解析参数
  "parserOptions":{
    "ecmaVersion": 6,//执行ecmascript版本
    "sourceType": "module",//源码所在位置
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict":true//启用严格模式
    }
  },
  //插件
  "plugins":[
    "react"
  ],
  "settings": {

  },
  //规则
  "rules": {
    // "strict":2
    //    "no-console":2
  }
  //使用ESLint推荐扩展
  //  "extends":"eslint:recommended"
}